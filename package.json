{
  "name": "workflow-studio",
  "version": "1.0.0",
  "description": "Premium workflow automation tool for gamers - automate repetitive tasks with human-like behavior",
  "type": "module",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "Grez Studios",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.2",
    "better-sqlite3": "^11.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^11.0.2",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.grezstudios.workflowstudio",
    "productName": "Workflow Studio",
    "files": [
      "src/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Utility"
    },
    "directories": {
      "output": "dist"
    }
  }
}
